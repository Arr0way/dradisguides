<% content_for :sidebar do %>
<h3>Get Involved</h3>
<p class="getInvolved">
  <img src="../images/strobe/paperandpencil.png">
  <a href="/contribute.html">Contribute New Guides</a><br>
  Dradis Guides are a community effort; contribute your own!
</p>

<p class="getInvolved">
  <img src="../images/strobe/starperson.png">
  <a href="/credits.html">Author Credits</a><br>
  Meet the team responsible for putting the Dradis Guides together.
</p>
<% end %>

<% all_guides.each do |name, list| %>
  <h3 class="group"><%= name %></h3>

  <dl>
    <% list.each do |guide| %>
      <dt><%= guide_link(guide) %></dt>
      <dd class="clearfix">
        <% if guide["construction"] %>
          <img src="images/strobe/notes.png" />
        <% end %>
        <p><%= guide["text"] %></p>
      </dd>
    <% end %>
  </dl>
<% end %>